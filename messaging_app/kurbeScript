#!/bin/bash

# kurbeScript - Setup and verify a local Kubernetes cluster using Minikube

set -e  # Exit on any error

# Function to check if a command exists
check_command() {
    command -v "$1" >/dev/null 2>&1
}

# Step 1: Ensure minikube is installed
if ! check_command minikube; then
    echo "âŒ Minikube is not installed. Please install it first:"
    echo "ğŸ‘‰ https://minikube.sigs.k8s.io/docs/start/"
    exit 1
fi

# Step 2: Ensure kubectl is installed
if ! check_command kubectl; then
    echo "âŒ kubectl is not installed. Please install it first:"
    echo "ğŸ‘‰ https://kubernetes.io/docs/tasks/tools/"
    exit 1
fi

# Step 3: Start Minikube
echo "ğŸš€ Starting Minikube cluster..."
minikube start

# Step 4: Verify the cluster is running
echo "ğŸ” Verifying cluster status..."
kubectl cluster-info || {
    echo "âŒ Failed to verify cluster. Please check minikube logs."
    exit 1
}

# Step 5: Get the list of pods in all namespaces
echo "ğŸ“¦ Retrieving available pods..."
kubectl get pods --all-namespaces

echo "âœ… Cluster is up and running. Pods listed above."
