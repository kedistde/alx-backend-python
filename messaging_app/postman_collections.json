{
  "info": {
    "name": "Messaging App API",
    "description": "API collection for testing the messaging app with JWT authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Get JWT Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"testpass123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/token/",
              "protocol": "http",
              "host": ["{{baseUrl}}"],
              "path": ["api", "token", ""]
            }
          },
          "response": []
        },
        {
          "name": "Refresh JWT Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/token/refresh/",
              "protocol": "http",
              "host": ["{{baseUrl}}"],
              "path": ["api", "token", "refresh", ""]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Conversations",
      "item": [
        {
          "name": "List Conversations",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/conversations/",
              "protocol": "http",
              "host": ["{{baseUrl}}"],
              "path": ["api", "conversations", ""]
            }
          },
          "response": []
        },
        {
          "name": "Create Conversation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"participant_ids\": [2, 3]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/conversations/",
              "protocol": "http",
              "host": ["{{baseUrl}}"],
              "path": ["api", "conversations", ""]
            }
          },
          "response": []
        },
        {
          "name": "Get Conversation Messages",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/conversations/1/messages/",
              "protocol": "http",
              "host": ["{{baseUrl}}"],
              "path": ["api", "conversations", "1", "messages", ""]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Messages",
      "item": [
        {
          "name": "Send Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"conversation_id\": 1,\n  \"content\": \"Hello, this is a test message!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/messages/",
              "protocol": "http",
              "host": ["{{baseUrl}}"],
              "path": ["api", "messages", ""]
            }
          },
          "response": []
        },
        {
          "name": "Filter Messages",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/messages/?conversation=1&start_date=2024-01-01&end_date=2024-12-31",
              "protocol": "http",
              "host": ["{{baseUrl}}"],
              "path": ["api", "messages", ""],
              "query": [
                {
                  "key": "conversation",
                  "value": "1"
                },
                {
                  "key": "start_date",
                  "value": "2024-01-01"
                },
                {
                  "key": "end_date",
                  "value": "2024-12-31"
                }
              ]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
